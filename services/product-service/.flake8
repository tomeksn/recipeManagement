[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    htmlcov,
    venv,
    env,
    migrations,
    .venv
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401   # imported but unused (handled by mypy)
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811